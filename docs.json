{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Namespace",
  "seo": {
    "metatags": {}
  },
  "colors": {
    "primary": "#16A34A",
    "light": "#07C983",
    "dark": "#15803D"
  },
  "favicon": "/favicon.ico",
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Get Started",
            "pages": ["index", "quickstart", "development"]
          },
          {
            "group": "Essentials",
            "pages": [
              "essentials/markdown",
              "essentials/code",
              "essentials/images",
              "essentials/settings",
              "essentials/navigation",
              "essentials/reusable-snippets"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "icon": "terminal",
        "groups": [
          {
            "group": "API Documentation",
            "pages": ["api-reference/introduction"]
          },
          {
            "group": "Offchain Subnames",
            "pages": [
              "api-reference/subnames/get",
              "api-reference/subnames/create",
              "api-reference/subnames/delete",
              "api-reference/subnames/search"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "App",
          "href": "https://app.namespace.ninja",
          "icon": "desktop"
        },
        {
          "anchor": "Dev Portal",
          "href": "https://dev.namespace.ninja/",
          "icon": "terminal"
        },
        {
          "anchor": "Blog",
          "href": "https://mintlify.com/blog",
          "icon": "newspaper"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.png",
    "dark": "/logo/dark.png"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "https://t.me/+5FAwyiKOTeswNTIy"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dev Dashboard",
      "href": "https://dev.namespace.ninja/"
    }
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      {
        "title": "Ask Perplexity",
        "description": "Ask Perplexity about the current page",
        "icon": "search",
        "href": {
          "base": "https://www.perplexity.ai/search",
          "query": [
            {
              "key": "q",
              "value": "Ask question about https://mintlify.com/docs$path.md"
            }
          ]
        }
      }
    ]
  },

